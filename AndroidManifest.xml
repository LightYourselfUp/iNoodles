<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyu.inoodles"
    android:versionCode="1"
    android:versionName="0.9.0" >

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:label="@string/app_name"
            android:name=".presentation.Main" 
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.CountdownTimeSelect" >
        </activity>
        <activity
            android:name=".presentation.Countdown"
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity 
            android:name=".presentation.ViewReviews" 
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity android:name=".presentation.AddReview" 
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity android:name=".presentation.AddReviewBarcode" 
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="8" />

</manifest>