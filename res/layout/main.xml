<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#def2f4"
    android:orientation="vertical" android:weightSum="3.0">

    <Button
        android:id="@+id/button_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/timerbutton"
        android:onClick="onChronometerClick" android:layout_weight="1.0"/>

    <Button
        android:id="@+id/button_get_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/getreviewsbutton"
        android:onClick="onGetReviewsClick" android:layout_weight="1.0"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/addreviewsbutton"
        android:onClick="onAddReviewClick" android:layout_weight="1.0"/>

</LinearLayout>